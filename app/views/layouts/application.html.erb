<!DOCTYPE html>
<html>
<head>
  <title>TextingApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">

        <%= link_to "TEXTING_APP", root_url, :class => "navbar-text navbar-left" %>
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, :class => "navbar-text navbar-right" %>
          <span class="navbar-text navbar-right">Logged in as <strong><%= current_user.email %></strong>.</span>
          <%= link_to "New Message", new_user_message_path(current_user), :class => "navbar-text navbar-left" %>
          <%= link_to "Contacts", user_contacts_path(current_user), :class => "navbar-text navbar-left" %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, :class => "navbar-text navbar-right" %>
          <%= link_to "Log in", new_user_session_path, :class => "navbar-text navbar-right" %>

        <% end %>

      </div>
    </div>

<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <%= yield %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>

</body>
</html>
