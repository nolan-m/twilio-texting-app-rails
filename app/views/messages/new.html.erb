
<h1>New Message</h1>

<%= render("layouts/errors", :object => @message) %>

<%= form_for [current_user, @message ] do |f| %>
  <div class="form-group">
    <%= f.label :from %></br>
    <%= f.text_field :from %>
  </div>

  <div id='add_contact_form'>
    <%= render ('add_contact') %>
  </div>
  <div id='contacts'>
  </div>

  <div class="form-group">
    <span class='btn btn-default' id='add-contact'contact_field>Add another contact</span>
  </div>

  <div class="form-group">
    <span id='contact-btn' class='btn btn-default'>Select from Contacts</span>
  </div>

  <div class="form-group" id="contacts-dropdown">
    <%= f.collection_select(:to, current_user.contacts.all, :phone, :name) %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Message" %></br>
    <%= f.text_area :body %>
  </div>


  <div class="form-group" id="save-check">
    <%= label_tag :save_contact %>
    <%= check_box_tag :save_contact %>
  </div>

  <div class="form-group" id="name_form">
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>




  <%= f.submit(:class => "btn btn-default") %>
<% end %>

