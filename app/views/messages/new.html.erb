<h1>New Message</h1>

<%= render("layouts/errors", :object => @message) %>

<%= form_for [current_user, @message] do |f| %>
  <div class="form-group">
    <%= f.label :from %></br>
    <%= f.text_field :from %>
  </div>

  <div class="form-group">
    <%= f.label :to %></br>
    <%= f.text_field :to %>
  </div>

  <div class="form-group">
    <%= f.label :body, "Message" %></br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
